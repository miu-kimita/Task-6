          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= link_to user_path(book_comment.user) do %>
              <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
              <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
              <div class="comment-delete">
                <td>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger destroy(@book.id)" ,remote: true %>
                </td>
              </div>
            <% end %>
          <% end %>
          </tr>